{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist/renderer",
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false
  },
  "include": [
    "renderer/src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "main"
  ]
}
