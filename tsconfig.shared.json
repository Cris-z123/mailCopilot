{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist/shared",
    "rootDir": "./shared",
    "types": ["node"]
  },
  "include": [
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "main",
    "renderer"
  ]
}
