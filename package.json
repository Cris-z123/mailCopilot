{
  "name": "mailcopilot",
  "version": "1.0.0",
  "type": "module",
  "description": "Email Item Traceability & Verification System",
  "main": "electron/main.js",
  "author": "Cris-z123",
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild",
      "puppeteer"
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:renderer\" \"pnpm run dev:main\"",
    "dev:main": "pnpm exec electron-rebuild -f -w better-sqlite3 && tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && node scripts/copy-migrations.mjs",
    "start": "pnpm exec electron-rebuild -f -w better-sqlite3 && electron .",
    "postinstall": "pnpm exec electron-rebuild -f -w better-sqlite3",
    "rebuild": "pnpm exec electron-rebuild -f -w better-sqlite3",
    "test": "vitest",
    "test:unit": "vitest --config vitest.unit.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:security": "vitest --config vitest.security.config.ts",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/cheerio": "^0.22.35",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.0.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.563.0",
    "mailparser": "^3.6.5",
    "openai": "^4.104.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "cross-env": "^7.0.3",
    "@eslint/js": "^9.18.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.9.1",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "happy-dom": "^20.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.20.0",
    "uuid": "^13.0.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "zustand": "^4.5.0"
  },
  "optionalDependencies": {
    "cheerio": "^1.2.0",
    "libpff": "^0.1.0",
    "msg-extractor": "^0.22.0",
    "puppeteer": "^24.0.0"
  }
}
