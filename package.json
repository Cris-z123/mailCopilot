{
  "name": "mailcopilot",
  "version": "1.0.0",
  "type": "module",
  "description": "Email Item Traceability & Verification System",
  "main": "dist/main/index.js",
  "author": "Cris-z123",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "test": "vitest",
    "test:unit": "vitest --config vitest.unit.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:security": "vitest --config vitest.security.config.ts",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "date-fns": "^4.0.0",
    "electron-log": "^5.0.0",
    "mailparser": "^3.6.5",
    "openai": "^4.104.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/better-sqlite3": "^7.6.9",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.9.1",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.20.0",
    "uuid": "^13.0.0",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "zustand": "^4.5.0"
  },
  "optionalDependencies": {
    "libpff": "^0.1.0",
    "msg-extractor": "^0.22.0",
    "puppeteer": "^24.0.0"
  }
}
