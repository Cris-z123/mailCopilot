{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/types/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer"
  ]
}
